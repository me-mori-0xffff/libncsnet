
V =
ifeq ($(strip $(V)),)
	E = @echo
	Q = @
else
	E = @\#
	Q =
endif
export E Q
CC = @CC@
CFLAGS = @CFLAGS@ @OCFLAGS@ -g
BUILDDIR = @BUILDDIR@
LIBNCSNETDIR = ../
LIB=$(LIBNCSNETDIR)/libncsnet.a
PROGS=icmpflood ping hexflood arping
SRCS=icmpflood.c ping.c hexflood.c arping.c
OBJS=icmpflood.o ping.o hexflood.o arping.o

all: $(LIBNCSNETDIR)/libncsnet.a $(BUILDDIR) $(OBJS) $(PROGS)

$(BUILDDIR):
	$(E) "  MKDIR   " $(BUILDDIR)
	@mkdir -p $(BUILDDIR)

hexflood.o: hexflood.c
	$(E) "  CC      " $<
	$(Q) $(CC) $(CFLAGS) -c -o $@ $<

icmpflood.o: icmpflood.c
	$(E) "  CC      " $<
	$(Q) $(CC) $(CFLAGS) -c -o $@ $<

ping.o: ping.c
	$(E) "  CC      " $<
	$(Q) $(CC) $(CFLAGS) -c -o $@ $<

arping.o: arping.c
	$(E) "  CC      " $<
	$(Q) $(CC) $(CFLAGS) -c -o $@ $<

hexflood: hexflood.o $(LIB)
	$(E) "  LINK    " $(BUILDDIR)/$@
	$(Q) $(CC) $(CFLAGS) -o $(BUILDDIR)/$@ $< $(LIB)

icmpflood: icmpflood.o $(LIB)
	$(E) "  LINK    " $(BUILDDIR)/$@
	$(Q) $(CC) $(CFLAGS) -o $(BUILDDIR)/$@ $< $(LIB)

ping: ping.o $(LIB)
	$(E) "  LINK    " $(BUILDDIR)/$@
	$(Q) $(CC) $(CFLAGS) -o $(BUILDDIR)/$@ $< $(LIB)

arping: arping.o $(LIB)
	$(E) "  LINK    " $(BUILDDIR)/$@
	$(Q) $(CC) $(CFLAGS) -o $(BUILDDIR)/$@ $< $(LIB)

clean:
	$(E) "  CLEAN"
	$(Q) rm -rf config.status config.log autom4te.cache Makefile config.h $(PROGS) $(OBJS)

.PHONY: all clean build
